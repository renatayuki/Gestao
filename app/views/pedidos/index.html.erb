<h1>Listing pedidos</h1>

<table>
  <tr>
    <th>Data</th>
    <th>Medico</th>
    <th>Prontuario</th>
    <th>Nome</th>
    <th>Restricao</th>
    <th>Recomendacao</th>
    <th>Deveanalizar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pedidos.each do |pedido| %>
  <tr>
    <td><%= pedido.data %></td>
    <td><%= pedido.medico_id %></td>
    <td><%= pedido.prontuario_id %></td>
    <td><%= pedido.nome %></td>
    <td><%= pedido.restricao %></td>
    <td><%= pedido.recomendacao %></td>
    <td><%= pedido.deveAnalizar %></td>
    <td><%= link_to 'Show', pedido %></td>
    <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
    <td><%= link_to 'Destroy', pedido, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

